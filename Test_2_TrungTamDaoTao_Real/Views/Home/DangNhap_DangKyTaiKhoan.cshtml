@model Test_2_TrungTamDaoTao_Real.Models.Model.TaiKhoanDangKy

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Nhập/Đăng Ký</title>
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link href="~/Content/css/Login_Register_style.css" rel="stylesheet" />
</head>
<body>
    <form>
        <input type="hidden" id="loaiTab" value="@ViewBag.tab" />
    </form>
    <div class="container-fluid bg">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-10 col-md-7 col-lg-5 row-container p-3">
                <nav>
                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                        <a class="nav-item nav-link" id="nav-dangNhap-tab" data-toggle="tab" href="#nav-dangNhap" role="tab" aria-controls="nav-home" aria-selected="true">Đăng nhập</a>
                        <a class="nav-item nav-link" id="nav-dangKy-tab" data-toggle="tab" href="#nav-dangKy" role="tab" aria-controls="nav-profile" aria-selected="false">Đăng ký</a>
                    </div>
                </nav>
                <div class="tab-content mt-4" id="nav-tabContent">
                    <div class="tab-pane fade " id="nav-dangNhap" role="tabpanel" aria-labelledby="nav-dangNhap-tab">
                        @if (ViewBag.taoTKThanhCong != null)
                        {
                            <p>
                                @ViewBag.taoTKThanhCong
                            </p>
                        }
                        @Html.Partial("_Partial_DangNhap")
                    </div>
                    <div class="tab-pane fade" id="nav-dangKy" role="tabpanel" aria-labelledby="nav-dangKy-tab">
                        
                        <h2>Đăng ký tài khoản</h2>
                        @using (Html.BeginForm("DangKyTaiKhoan", "Home", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label>Địa chỉ Email</label>
                                @*<input data-toggle="tooltip" title="Địa chỉ email" data-placement="top" type="email" class="form-control" name="EmailDK" id="EmailDK" placeholder="Địa chỉ Email">*@
                                @Html.TextBoxFor(model=>model.EmailDK, new { @data_toggle = "tooltip", @title = "Địa chỉ email", @data_placement = "top", @type = "email", @class = "form-control", @name = "EmailDK", @id = "EmailDK", @placeholder = "Địa chỉ Email" })
                                @Html.ValidationMessageFor(model => model.EmailDK, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Họ và tên</label>
                                <div class="row">
                                    <div class="col-sm-8">
                                        @*<input data-toggle="tooltip" title="Họ và tên lót" data-placement="top" type="text" class="form-control" name="HoTenLotDK" id="HoTenLotDK" placeholder="Họ và tên lót">*@
                                        @Html.TextBoxFor(model => model.HoTenLotDK, new { @data_toggle = "tooltip", @title = "Họ và tên lót", @data_placement = "top", @class = "form-control", @name = "HoTenLotDK", @id = "HoTenLotDK", @placeholder = "Họ và tên lót" })
                                        @Html.ValidationMessageFor(model => model.HoTenLotDK, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-sm-4">
                                        @*<input data-toggle="tooltip" title="Tên" data-placement="top" type="text" class="form-control" name="TenDK" id="TenDK" placeholder="Tên">*@
                                        @Html.TextBoxFor(model => model.TenDK, new { @data_toggle = "tooltip", @title = "Tên", @data_placement = "top", @class = "form-control", @name = "TenDK", @placeholder = "Tên", @id="Ten" })
                                        @Html.ValidationMessageFor(model => model.TenDK, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Mật khẩu</label>
                                @*<input data-toggle="tooltip" title="Mật khẩu" data-placement="top" type="password" class="form-control" name="MatKhauDK" id="MatKhauDK" placeholder="Nhập mật khẩu">*@
                                @Html.PasswordFor(model => model.MatKhauDK, new { @class = "form-control", @data_toggle = "tooltip", @title = "Mật khẩu", @data_placement = "top", @name = "MatKhauDK", @id = "MatKhauDK", @placeholder = "Nhập mật khẩu" })
                                @Html.ValidationMessageFor(model => model.MatKhauDK, "", new { @class = "text-danger"})
                            </div>
                            <div class="form-group">
                                <label>Nhập lại mật khẩu</label>
                                @*<input data-toggle="tooltip" title="Nhập lại mật khẩu" data-placement="top" class="form-control" name="NhapLaiMatKhauDK" id="NhapLaiMatKhauDK" placeholder="Nhập lại mật khẩu">*@
                                @Html.PasswordFor(model => model.NhapLaiMatKhauDK,new { @class="form-control", @data_toggle = "tooltip", @title = "Nhập lại mật khẩu", @data_placement = "top",@name = "NhapLaiMatKhauDK",@id = "NhapLaiMatKhauDK",@placeholder = "Nhập lại mật khẩu"})
                                @Html.ValidationMessageFor(model => model.NhapLaiMatKhauDK, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group py-3">
                                <input type="submit" class="btn btn-primary btn-block" name="submitFormDangKy" id="DangKy" value="Đăng ký">
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/js/popper.min.js"></script>
    <script src="~/Scripts/js/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            //add tooltip
            $('#tenDangNhap').tooltip();
            $('#matKhau').tooltip();
            $('#EmailDK').tooltip();
            $('#HoTenLotDK').tooltip();
            $('#TenDK').tooltip();
            $('#MatKhauDK').tooltip();
            $('#NhapLaiMatKhauDK').tooltip();

            //active tab
            var loaiTab = $("#loaiTab").val();
            if (loaiTab == "DangKy") {
                $("#nav-dangKy").addClass("show active");
                $("#nav-dangKy-tab").addClass("active");
            }
            else if (loaiTab == "DangNhap"){
                $("#nav-dangNhap").addClass("show active");
                $("#nav-dangNhap-tab").addClass("active");
                $("#EmailDK").val("");
                $("#HoTenLotDK").val("");
                $("#Ten").val("");
            }
        });
    </script>
</body>
</html>
